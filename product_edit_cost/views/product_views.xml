<odoo>
     <record id="product_template_only_form_view" model="ir.ui.view">
            <field name="name">product.template.only.form.view.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='standard_price']" position="replace">
                    <field name="standard_price" attrs="{'readonly':['&amp;',['valuation','=','real_time'],['cost_method','in',['average','standard']]]}" 
                        widget='monetary' options="{'currency_field': 'cost_currency_id', 'field_digits': True}" />
                </xpath>
            </field>
     </record>
</odoo>
